{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Schema for .htmlhintrc",
  "type": "object",
  "$defs": {},
  "properties": {
    "extends": {
      "description": "Extensions",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["htmlhint:recommended", "htmlhint:legacy"]
      }
    },
    "rules": {
      "description": "Rules",
      "type": "object",
      "properties": {
        "alt-require": {
          "description": "The 'alt' attribute of an '&lt;img&gt;' element must be present and 'alt' attribute of 'area[href]' and 'input[type=image]' must have a value.",
          "oneOf": [
            {
              "type": "string",
              "enum": ["error", "warn", "off"]
            },
            {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": ["error", "warn", "off"]
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "attr-lowercase": {
          "description": "All attribute names must be in lowercase.",
          "oneOf": [
            {
              "type": "string",
              "enum": ["error", "warn", "off"]
            },
            {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": ["off"]
                }
              ],
              "minItems": 1,
              "maxItems": 1,
              "additionalItems": false
            },
            {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": ["error", "warn"]
                },
                {
                  "type": "object",
                  "properties": {
                    "exceptions": {
                      "type": "array",
                      "items": "string"
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        }
      }
    }
  }
}
